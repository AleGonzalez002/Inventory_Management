<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Button?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sv.uees.inventory_management.controller.CategoryController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label styleClass="h3" text="Gestión de Categorías" />
    <Label styleClass="text-muted" text="Definición de grupos para clasificar productos." />

    <ToolBar>
        <items>
            <Button fx:id="btnAddCategory" text="➕ Agregar Nueva"  styleClass="btn-primary" />
            <Button fx:id="btnEditCategory" text="✏️ Editar"  disable="true" />
            <Button fx:id="btnDeleteCategory" text="🗑️ Eliminar" styleClass="btn-danger" disable="true" />
        </items>
    </ToolBar>

    <TableView fx:id="categoriesTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colID" prefWidth="80.0" text="ID" />

            <TableColumn fx:id="colNombre" prefWidth="250.0" text="Nombre" />

            <TableColumn fx:id="colDescripcion" prefWidth="400.0" text="Descripción" />

        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

</VBox>